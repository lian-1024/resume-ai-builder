{
  "name": "resume-ai-builder",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "commit": "git add . && pnpm czg",
    "prepare": "husky"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "cz-git": "^1.11.0",
    "husky": "^9.1.7",
    "turbo": "^2.3.3",
    "typescript": "^5.7.3",
    "@resume/config": "workspace:*"
  },
  "packageManager": "pnpm@8.15.6",
  "prettier": "@resume/config/prettier"
}