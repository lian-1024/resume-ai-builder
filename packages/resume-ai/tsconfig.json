{
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "es",
    "lib"
  ]
}